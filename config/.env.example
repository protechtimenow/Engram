# Financial Neural Capacity Environment Configuration
# Copy this to .env file and fill with your actual credentials

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret  
REDDIT_USER_AGENT=EngramFinancial/1.0

# Financial Data Configuration
FINANCIAL_UPDATE_INTERVAL=300  # seconds (5 minutes)
FINANCIAL_POST_LIMIT=100
FINANCIAL_COMMUNITIES=r/Quant,r/finance,r/SecurityAnalysis,r/wallstreetbets,r/personalfinance,r/Economics,r/stocks,r/portfolios,r/investing,r/ValueInvesting,r/FluentInFinance

# Neural Configuration
NEURAL_HASH_PRIMES=2,3,5,7,11,13,17,19
FINANCIAL_SENTIMENT_SCALE=1.0
TREND_DETECTION_THRESHOLD=0.3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FINANCIAL_CACHE_TTL=600  # seconds (10 minutes)

# Development Mode
DEV_MODE=true
MOCK_REDDIT_DATA=true  # Set to false for live Reddit data